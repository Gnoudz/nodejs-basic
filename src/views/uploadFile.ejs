<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/upload">Upload File</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" >
        <h2>Single Upload</h2>
        <form method="POST" action="/upload-profile-pic" enctype="multipart/form-data">
            <div class="d-flex flex-column ">
                <label>Select your profile picture:</label>
                <input type="file" name="profile_pic" />
            </div>
            <br>
            <div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>

    <div class="container mt-4">
        <h2>Multiple Upload</h2>
        <form method="POST" action="/upload-multiple-images" enctype="multipart/form-data">
            <div class="d-flex flex-column ">
                <label>Select multiple images:</label>
                <input type="file" name="multiple_images" multiple />
            </div>
            <br>
            <div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</body>

</html>